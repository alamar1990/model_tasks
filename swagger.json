{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Modelos-Tareas-API",
    "description": "Gestion de modelos, tareas, objetivos",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/api/user": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Obtiene todos los usuarios",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/api/user": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Inserta un usuario",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    }
  },

  "definitions": {
    "User": {
      "required": [
        "name",
        "email"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "lastname": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "active": {
          "type": "boolean"
        }
      }
    },
    "Task": {
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string",
          "uniqueItems": true
        },
        "date": {
          "type": "string"
        },
        "objectives": {
          "type": "array"
        }
      }
    },
    "Objective": {
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string",
          "uniqueItems": true
        },
        "observations": {
          "type": "string"
        },
        "dates": {
          "type": "string"
        }
      }
    },
    "Model": {
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "sections": {
          "type": "object"
        }
      }
    }

  }
}